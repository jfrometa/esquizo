{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run (web)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "cwd": "client",
      "args": ["-d", "chrome", "--wasm", "-v"]
    },
    {
      "name": "Run (Android)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "cwd": "client",
      "deviceId": "sdk gphone64 arm64 (mobile)",
      "preLaunchTask": "start-android-emulator"
    },
    {
      "name": "Run iOS Simulator",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "cwd": "client",
      "args": ["-d", "apple_ios_simulator"],
      "preLaunchTask": "start-ios-simulator"
    },
    {
      "name": "client (auto renderer)",
      "program": "lib/main.dart",
      "cwd": "client",
      "request": "launch",
      "type": "dart",
      "args": ["-d", "chrome"]
    }
  ],
  "tasks": {
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Start Docker",
        "type": "shell",
        "command": "docker-compose up -d",
        "problemMatcher": [],
        "group": "build"
      },
      {
        "label": "Run Prisma Migrate",
        "type": "shell",
        "command": "pnpm prisma migrate dev",
        "problemMatcher": [],
        "group": "build"
      },
      {
        "label": "Start Docker and Prisma Migrate",
        "dependsOn": ["Start Docker", "Run Prisma Migrate"],
        "dependsOrder": "sequence",
        "problemMatcher": []
      }
    ]
  }
}
